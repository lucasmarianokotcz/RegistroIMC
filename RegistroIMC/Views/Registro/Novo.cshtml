@model MODEL.Registro

@{
    ViewBag.Title = "Novo Registro";
}

<h2>Novo registro de IMC</h2>
<br />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-inline">
        <div class="form-group">
            @Html.LabelFor(model => model.Peso, htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Peso, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off", @onchange = "myFunction()" } }) kg
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Altura, htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Altura, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off", @onkeyup = "if (/\\D/g.test(this.value)) this.value = this.value.replace(/\\D/g,'')" } }) cm
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DataRegistro, htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DataRegistro, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="col-md-2 botoes-novo">
            <input type="submit" value="Salvar" class="btn btn-success btn-salvar" />
            <a href="@Url.Action("Index")"><div class="btn-cancelar">Cancelar</div></a>
        </div>

    </div>

    <div class="erros">
        @Html.ValidationMessageFor(model => model.Peso, "", new { @class = "text-danger" })
        @Html.ValidationMessageFor(model => model.Altura, "", new { @class = "text-danger" })
        @Html.ValidationMessageFor(model => model.DataRegistro, "", new { @class = "text-danger" })
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryvalptbr")
}
@model MODEL.UsuarioCadastro

@{
    ViewBag.Title = "Cadastro";
}

<h2>Cadastro</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form">
        <div class="form-group">
            @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control input-login", @placeholder = "Seu nome", @type = "text", @maxlength = "60" } })
            @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control input-login", @placeholder = "Seu endereço de e-mail", @type = "email", @maxlength = "100" } })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.EditorFor(model => model.SenhaHash, new { htmlAttributes = new { @class = "form-control input-login", @placeholder = "Defina sua senha", @type = "password", @maxlength = "20" } })
            @Html.ValidationMessageFor(model => model.SenhaHash, "", new { @class = "text-danger" })
        </div>
        <input type="submit" class="btn btn-success btn-cadastro" value="Cadastrar" />
        <div id="link-cadastrar">Já possui uma conta? <a href="@Url.Action("Login", "Home")">Fazer login</a></div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}